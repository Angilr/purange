<div class="section" id="wrapper">
  <div class="container">
    <%= render 'shared/admin_header' %>
    <h1 class="is-size-2">Đăng nhập vào Purange Admin</h1>
    <%= form_with url: admin_login_path, local: true do |f| %>
      <div class="field">
        <%= f.label :name, class: 'label' %>
        <div class="control">
          <%= f.text_field :name, class: 'input' %>
        </div>
      </div>
      <div class="field">
        <%= f.label :password, class: 'label' %>
        <div class="control">
          <%= f.password_field :password, class: 'input' %>
        </div>
      </div>
      <div class="control">
        <%= submit_tag 'Đăng nhập', class: 'button is-primary' %>
      </div>
    <% end %>
  </div>
</div>

<h1>Đăng nhập vào Purange Admin</h1>
<%= form_with scope: :admin, url: admin_login_path, local: true do |f| %>
  <div class="field">
    <%= f.label :name, class: 'label' %>
    <div class="control">
      <%= f.text_field :name, class: 'input' %>
    </div>
  </div>
  <div class="field">
    <%= f.label :password, class: 'label' %>
    <div class="control">
      <%= f.password_field :password, class: 'input' %>
    </div>
  </div>
  <div class="control">
    <%= f.submit class: 'button is-primary' %>
  </div>
<% end %>
